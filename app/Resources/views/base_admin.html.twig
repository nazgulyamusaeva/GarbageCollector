<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}Администраторская{% endblock %}</title>
    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
        <link rel="stylesheet" href="{{ asset('bundles/garbagecollectoradmin/css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/garbagecollectoradmin/css/bootstrap-theme.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/garbagecollectoradmin/css/font-awesome.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/garbagecollectoradmin/css/custom-styles.css') }}" />

        <style>
            .content {
                background: white;
                padding: 5px;
            }
        </style>
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block body %}
    <div id="wrapper">
        <nav class="navbar navbar-default top-navbar" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">garbage collector</a>
            </div>

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-sign-out fa-fw"></i> {{ 'admin.action.logout'|trans() }}</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li>
                        <a href="{{ path('admin_dashboard_dashboard') }}"><i class="fa fa-dashboard"></i> {{ 'admin.title.dashboard'|trans() }}</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_garbage_list') }}"><i class="fa fa-map-marker"></i> {{ 'admin.title.buckets'|trans() }}</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-pencil"></i> {{ 'admin.title.requests'|trans() }}</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-users"></i> {{ 'admin.title.housecommittees'|trans() }}</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper">
            <div class="header">
                <h1 class="page-header">
                    {% block contentheader %}

                    {% endblock %}
                </h1>
            </div>
            <div id="page-inner">
                <div class="col-md-12 content">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {% javascripts
        '@GarbageCollectorAdminBundle/Resources/public/js/jquery-1.10.2.js'
        '@GarbageCollectorAdminBundle/Resources/public/js/bootstrap.min.js'
        '@GarbageCollectorAdminBundle/Resources/public/js/jquery.metisMenu.js'
        '@GarbageCollectorAdminBundle/Resources/public/js/custom-scripts.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
