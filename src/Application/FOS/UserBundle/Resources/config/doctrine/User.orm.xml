<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Application\FOS\UserBundle\Entity\User" table="fos_user_user">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="firstName" column="first_name" nullable="false" type="string" />
    <field name="lastName" column="last_name" nullable="false" type="string" />
    <field name="address" column="address" nullable="false" type="string" />
    <field name="phone" column="phone" nullable="true" type="string" />

    <lifecycle-callbacks>
        <lifecycle-callback type="prePersist" method="lifecycleCallback"/>
        <lifecycle-callback type="preUpdate" method="lifecycleCallback"/>
    </lifecycle-callbacks>
  </entity>
</doctrine-mapping>
