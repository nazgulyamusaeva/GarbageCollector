{% extends "::base_admin.html.twig" %}

{% block title %}{{ housecommittee.firstName ~ ' ' ~ housecommittee.lastName }} - {{ parent() }}{% endblock %}

{% block contentheader %}
    {{ housecommittee.firstName ~ ' ' ~ housecommittee.lastName }}
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <a class="btn btn-success createBtn" href="{{ path('admin_housecommittee_new') }}"><i class="fa fa-plus"></i> Добавить</a>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>{{ 'entity.housecommittee.username'|trans() }}</th>
                <th>{{ 'entity.housecommittee.firstname'|trans() }}</th>
                <th>{{ 'entity.housecommittee.lastname'|trans() }}</th>
                <th>{{ 'entity.housecommittee.address'|trans() }}</th>
                <th>{{ 'entity.housecommittee.phone'|trans() }}</th>
                <th>{{ 'entity.housecommittee.email'|trans() }}</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ housecommittee.username }}</td>
                    <td>{{ housecommittee.firstname }}</td>
                    <td>{{ housecommittee.lastname }}</td>
                    <td>{{ housecommittee.address }}</td>
                    <td>{{ housecommittee.phone }}</td>
                    <td>{{ housecommittee.email }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}