{% extends "::base_admin.html.twig" %}

{% block title %}{{ 'admin.title.housecommittees'|trans() }} - {{ parent() }}{% endblock %}

{% block contentheader %}
    {{ 'admin.title.housecommittees'|trans }}
{% endblock %}

{% block content %}
    {% if app.session.flashBag.has('error') %}
        {% for msg in app.session.flashBag.get('error') %}
            <div class="alert alert-danger">{{ msg|trans() }}</div>
        {% endfor %}
    {% endif %}

    <div class="table-responsive">
        <a class="btn btn-success createBtn" href="{{ path('admin_housecommittee_new') }}"><i class="fa fa-plus"></i> {{ 'entity.housecommittee.crud.add'|trans() }}</a>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>{{ 'entity.housecommittee.username'|trans() }}</th>
                <th>{{ 'entity.housecommittee.firstname'|trans() }}</th>
                <th>{{ 'entity.housecommittee.lastname'|trans() }}</th>
                <th>{{ 'entity.housecommittee.address'|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            {% for i in houseCommittees %}
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.username }}</td>
                    <td>{{ i.firstname }}</td>
                    <td>{{ i.lastname }}</td>
                    <td>{{ i.address }}</td>
                    <td>
                        <a class="btn btn-default" href="{{ path('admin_housecommittee_show', {'id': i.id}) }}"><i class="fa fa-eye"></i> {{ 'admin.action.crud.show'|trans() }} </a>
                        <a class="btn btn-default" href="{{ path('admin_housecommittee_edit', {'id': i.id}) }}"><i class="fa fa-pencil"></i> {{ 'admin.action.crud.edit'|trans() }}</a>
                        <a class="btn btn-default"><i class="fa fa-trash-o"></i> {{ 'admin.action.crud.delete'|trans() }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}