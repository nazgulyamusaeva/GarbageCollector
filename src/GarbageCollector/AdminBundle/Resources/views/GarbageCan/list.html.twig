{% extends "::base_admin.html.twig" %}

{% block title %}{{ 'admin.title.garbagecans'|trans() }} - {{ parent() }}{% endblock %}

{% block contentheader %}
    {{ 'admin.title.garbagecans'|trans }}
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <a class="btn btn-success createBtn" href="{{ path('admin_garbagecan_new') }}"><i class="fa fa-plus"></i> Добавить</a>
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>{{ 'entity.garbagecan.street'|trans() }}</th>
                <th>{{ 'entity.garbagecan.latitude'|trans() }}</th>
                <th>{{ 'entity.garbagecan.longitude'|trans() }}</th>
                <th>{{ 'entity.garbagecan.is_full'|trans() }}</th>
            </tr>
            </thead>
            <tbody>
                {% for i in garbageCans %}
                    <tr>
                        <td>{{ i.id }}</td>
                        <td>{{ i.street }}</td>
                        <td>{{ i.latitude }}</td>
                        <td>{{ i.longitude }}</td>
                        <td>
                            {% if i.isFull %}
                                <div class="btn btn-danger">Да</div>
                            {% else %}
                                <div class="btn btn-success">Нет</div>
                            {% endif %}
                        </td>
                        <td>
                            {#<div class="btn-group open">#}
                                {#<button data-toggle="dropdown" class="btn btn-default dropdown-toggle" aria-expanded="true">Default <span class="caret"></span></button>#}
                                {#<ul class="dropdown-menu">#}
                                    {#<li><a href="#">Action</a></li>#}
                                    {#<li><a href="#">Another action</a></li>#}
                                    {#<li><a href="#">Something else here</a></li>#}
                                    {#<li class="divider"></li>#}
                                    {#<li><a href="#">Separated link</a></li>#}
                                {#</ul>#}
                            {#</div>#}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}