{% extends "::base_admin.html.twig" %}

{% block title %}{{ 'entity.request.crud.show'|trans() ~ ' #' ~ request.id  }} - {{ parent() }}{% endblock %}

{% block contentheader %}
    {{ 'entity.request.crud.show'|trans() ~ ' #' ~ request.id  }}
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>{{ 'entity.request.user'|trans() }}</th>
                <th>{{ 'entity.request.photo'|trans() }}</th>
                <th>{{ 'entity.request.garbagecan'|trans() }}</th>
                <th>{{ 'entity.request.comment'|trans() }}</th>
                <th>{{ 'entity.request.created_at'|trans() }}</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{% if request.user %} {{ request.user.username }} {% else %} {{ 'info.anonymous'|trans() }} {% endif %}</td>
                <td>{% thumbnail request.photo, 'small' %}</td>
                <td>{{ request.garbagecan.street }}</td>
                <td>{{ request.comment }}</td>
                <td>{{ request.createdAt|date('Y-m-d H:m') }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}